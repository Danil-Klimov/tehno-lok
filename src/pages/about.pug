extends ../layouts/_default
block variables
	-
		const config = {
			title: "О компании - ТехноЛОК",
			description: "",
			og_title: "",
			og_type: "",
			og_url: "",
			og_img: "",
			order_bt: true
		}
block body_start
block content
	include ../includes/_header
	main.main.main_page
		include ../includes/_breadcrumbs
		section.page-header
			.container
				.row
					.page-header__content
						h1.page-header__title О КОМПАНИИ
		include ../includes/_promo
		section.about
			.container
				.row
					.about__header
						.vertical-text О КОМПАНИИ
						h2.title.about__title ПРЕИМУЩЕСТВА НАШЕЙ КОМПАНИИ
						img(src='img/about-img.png' alt="")
					.about__content
						p В настоящий момент компания «ТехноЛОК» уже более 15 лет занимается проектированием и производством тентовых мобильных укрытий.
						ul
							li Более 15 лет опыта проектирования и производства
							li Собственное полностью оборудованное производство
							li Самая широкая вариация размерных характеристик
							li Уникальные технологические разработки наших специалистов на основе опытно конструкторских работ, проведенных совместно с Министерством Обороны России
							li Производство утепленных тентовых покрытий, позволяющих получить реальную экономию порядка 1 млн. руб за отопительный период
							li Широкий спектр дополнительных услуг: монтаж, расчет и устройство оснований и инженерных систе
		include ../includes/_video-block
		include ../includes/_interview
		include ../includes/_reviews
		include ../includes/_posts
		//TODO сделать большой request
		include ../includes/_request
	include ../includes/_footer
	include ../includes/_modal
block body_end